<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jiahaoliuliu.simpleespressotest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleButtonActivity"
            android:label="@string/simple_button_activity" />
        <activity
            android:name=".SimpleCheckBoxesActivity"
            android:label="@string/simple_check_boxes_activity" />
        <activity
            android:name=".SimpleEditTextActivity"
            android:label="@string/simple_edit_text_activity" />
        <activity
            android:name=".SimpleRadioButtonsActivity"
            android:label="@string/simple_radio_buttons_activity" />
        <activity
            android:name=".SimplePopUpListDialogActivity"
            android:label="@string/simple_pop_up_list_dialog_activity" />
        <activity
            android:name=".SimplePopUpYesNoDialogActivity"
            android:label="@string/simple_pop_up_yes_no_dialog_activity" />
        <activity
            android:name=".SimpleWebViewActivity"
            android:label="@string/simple_web_view_activity" />
        <activity
            android:name=".SimpleDrawerActivity"
            android:label="@string/title_activity_simple_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivityAsDialogActivity" />

        <activity android:name=".DialogActivity"
            android:theme="@android:style/Theme.Dialog"
            />
    </application>

</manifest>